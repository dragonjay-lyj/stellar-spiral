---
import Layout from '../../../layouts/Layout.astro';
import '../../../style/all.css';
import Navigation from '../../../components/Navigation.astro';
import Skeleton from '../../../components/Skeleton.astro';
import DetailCard from '../../../components/DetailCard.astro';
import data from '../../../json/pic/18plusplus/index.json';
import Footer from '../../../components/Footer.astro';
import { Tweet } from 'astro-embed';
---

<Layout title="游戏打蛋机">
	<main>
		  <Navigation></Navigation>
		</div>
		<div id="response" class="relative z-20 mx-auto max-w-3xl pt-10 xl:max-w-none">
			<div class="grid gap-2">
				<Tweet id="https://twitter.com/18plus_plus/status/1607909962340241408" />
			{data
				? data.map((dcardData, index) => (
					<DetailCard key={index} dcardData={dcardData} />
				  ))
				: <Skeleton show={data ? false : true} />}
			</div>
		</div>
		<Footer></Footer>
	  </main>	  
</Layout>
