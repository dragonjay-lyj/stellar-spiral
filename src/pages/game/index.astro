---
import Layout from '../../layouts/Layout.astro';
import '../../style/all.css';
import Navigation from '../../components/Navigation.astro';
import Skeleton from '../../components/Skeleton.astro';
import GameCard from '../../components/GameCard.astro';
import data from '../../json/game/index.json';
import Footer from '../../components/Footer.astro';
---

<Layout title="游戏打蛋机">
	<main>
		  <Navigation></Navigation>
		<div id="response" class="relative z-20 mx-auto max-w-3xl pt-10 xl:max-w-none">
			<div class="grid gap-2">
			{data
				? data.map((gcardData, index) => (
					<GameCard key={index} gcardData={gcardData} />
				  ))
				: <Skeleton show={data ? false : true} />}
			</div>
		</div>
		<Footer></Footer>
	  </main>	  
</Layout>