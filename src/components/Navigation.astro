<span class="mdui-btn mdui-btn-icon mdui-ripple mdui-ripple-white" mdui-drawer="{target: '#main-drawer', swipe: true}">
  <i class="mdui-icon material-icons">menu</i>
</span>
<div class="mdui-drawer" id="main-drawer">
  <div class="mdui-list" mdui-collapse="{accordion: true}" style="margin-bottom: 76px;">
    <div class="mdui-collapse-item mdui-collapse-item-open">
      <div class="mdui-collapse-item-header mdui-list-item mdui-ripple">
        <i class="fa-duotone fa-house-user mdui-list-item-icon mdui-icon material-icons"></i>
        <a href="./" class="mdui-list-item-content">主页</a>
      </div>
    </div>
    <div class="mdui-collapse-item">
      <div class="mdui-collapse-item-header mdui-list-item mdui-ripple">
        <i class="fa-duotone fa-image mdui-list-item-icon mdui-icon material-icons"></i>
        <a href="./pic"class="mdui-list-item-content">图图</a>
      </div>
    </div>
    <div class="mdui-collapse-item">
      <div class="mdui-collapse-item-header mdui-list-item mdui-ripple">
        <i class="fa-duotone fa-gamepad-modern mdui-list-item-icon mdui-icon material-icons"></i>
        <a href="./game" class="mdui-list-item-content">游戏</a>
      </div>
    </div>
    <theme-button value="dark" id="btn" size="3"></theme-button>
  </div>
</div>

<script>
  document.body.style.backgroundColor = "#424242";
  btn.addEventListener("change", e => {
    if (e.detail === 'dark') {
      document.body.style.backgroundColor = "#424242";
    }
    else {
      document.body.style.backgroundColor = "aliceblue";
    }
  });
</script>

<script src="../js/script.js"></script>